<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="15dp"
        android:id="@+id/layout_header"
        android:background="@drawable/img_02"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_back"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/ic_fav_bor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Restaurant Bolsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:text="Valentine, New York"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView

                android:src="@drawable/img_01"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_review"
        android:padding="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/main_color_01"
                android:src="@drawable/ic_rate"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="4.8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/main_color_01"
                android:src="@drawable/ic_watch"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="40min"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/main_color_01"
                android:src="@drawable/ic_location"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="1.4km"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_category"
        android:padding="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main_color_01"
                android:textSize="18dp"
                android:text="Popular"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/main_color_04"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main_color_02"
                android:textSize="18dp"
                android:text="Deals"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.divider.MaterialDivider
                android:visibility="gone"
                app:dividerColor="@color/main_color_04"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main_color_02"
                android:textSize="18dp"
                android:text="Wraps"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.divider.MaterialDivider
                android:visibility="gone"
                app:dividerColor="@color/main_color_04"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main_color_02"
                android:textSize="18dp"
                android:text="Beverages"
                android:layout_width="85dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.divider.MaterialDivider
                android:visibility="gone"
                app:dividerColor="@color/main_color_04"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main_color_02"
                android:textSize="18dp"
                android:text="Dessert"
                android:layout_width="85dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.divider.MaterialDivider
                android:visibility="gone"
                app:dividerColor="@color/main_color_04"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_header_popular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_category"
        android:text="Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_popular"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_header_popular"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:riv_corner_radius="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food_01"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/black"
                android:text="Chicken Fajita Pizza"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="18dp"
                    android:text="8'' Pizza with regular sof drink"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="$10"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:riv_corner_radius="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food_01"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:text="Chicken Fajita Pizza"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="18dp"
                    android:text="8'' Pizza with regular sof drink"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="$10"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_1"
            app:layout_constraintTop_toBottomOf="@id/layout_popular"
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

        <TextView
            android:id="@+id/text_header_deals"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/divider_1"
            android:text="Deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_deals"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_header_deals"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:riv_corner_radius="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_food_01"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:text="Chicken Fajita Pizza"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="18dp"
                        android:text="8'' Pizza with regular sof drink"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="$10"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:riv_corner_radius="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_food_01"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:text="Chicken Fajita Pizza"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="18dp"
                        android:text="8'' Pizza with regular sof drink"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="$10"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>