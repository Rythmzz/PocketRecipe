<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripper_effect"
    android:foreground="?android:attr/selectableItemBackground"

    android:clickable="true"
    android:id="@+id/layout_recipe"
    >
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food_01"
                app:riv_corner_radius="28dp" />

            <ImageView
                android:background="@drawable/ripper_effect"
                android:clickable="true"
                android:id="@+id/favorite_recipe"
                android:layout_margin="15dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_heart_02"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:id="@+id/name_recipe"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:text="Chorizo x mozzarella gnocchi bake"
                android:layout_margin="15dp"
                android:layout_gravity="bottom|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>
    </FrameLayout>
