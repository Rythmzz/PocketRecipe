<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/layout_header"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:id="@+id/img_detail_food"
            android:scaleType="centerCrop"
            android:background="@drawable/img_rp_03"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/ripper_effect"
                android:src="@drawable/ic_back_01"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:background="@drawable/ripper_effect"
                android:clickable="true"
                android:id="@+id/favorite_recipe"
                android:src="@drawable/ic_heart_02"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>



    </FrameLayout>
    <LinearLayout
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name_detail_food"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/main_color_01"
                android:text="Salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_color_03"
                    android:text="Bữa Ăn: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/text_meal_detail_food"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="Ăn kèm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/count_like"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:background="@drawable/ripper_effect"
                    android:tint="@color/main_color_01"
                    android:id="@+id/like_recipe"
                    android:textSize="15dp"
                    android:src="@drawable/ic_like_02"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/text_brief_detail_food"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Salad là một món ăn nhẹ vừa dinh dưỡng và lành mạnh. Cùng làm món salad yêu thích của bạn ngay thôi nào!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Mô Tả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/text_description_detail_food"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Món salad với các loại rau tươi ngon, vị chua ngọt hài hòa, chút vị béo của sốt mayonnaise nữa không chỉ đem lại cảm giác ngon miệng mà còn cung cấp nguồn dinh dưỡng lành mạnh. Đặc biệt còn rất tốt cho chế độ giảm cân của bạn nữa đó."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:id="@+id/text_duration_detail_food"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main_color_03"
            android:text="🕒 25 Phút"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/text_kcal_detail_food"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main_color_03"
            android:text="150 kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/text_count_recipe_detail_food"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main_color_03"
            android:text="📝 11-12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/text_count_family_detail_food"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main_color_03"
            android:text="👨‍👩‍👦‍👦 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:dividerColor="@color/main_color_01"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Nguyên Liệu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/text_ingredient_detail_food"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="⭐ 4 cây xà lách
\n⭐ 2 trái dưa leo
\n⭐ 3 trái cà chua
\n⭐ 100  g cần tây
\n⭐ 1/2 củ hành tây
\n⭐ 2 muỗng canh dầu ô liu*
\n⭐ 1/4 muỗng cà phê muối
\n⭐ 2 muỗng cà phê giấm hoặc chanh
\n⭐ 2 muỗng cà phê đường
\n⭐ 1 chút tiêu
\n⭐ 1 muỗng canh xốt mayonnaise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Hướng Dẫn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <com.transferwise.sequencelayout.SequenceLayout
            android:id="@+id/layout_list_step"
            android:padding="5dp"
            android:background="@drawable/shape_18"
            app:progressBackgroundColor="@color/main_color_01"
            app:progressForegroundColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





        </com.transferwise.sequencelayout.SequenceLayout>






    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>