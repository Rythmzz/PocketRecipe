<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/layout_header"
        android:background="@drawable/img_10"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/ripper_effect"
                android:tint="@color/black"
                android:src="@drawable/ic_back"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <View
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <ImageView
                   android:tint="@color/main_color_03"
                   android:src="@drawable/ic_add_photo"
                   android:layout_width="80dp"
                   android:layout_height="80dp"/>
           </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Tên Món"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:id="@+id/edit_name"
            android:drawablePadding="5dp"
            android:hint="Tên món"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Giới Thiệu Ngắn Món Ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:padding="15dp"
            android:gravity="top"
            android:id="@+id/edit_about"
            android:drawablePadding="5dp"
            android:hint="Giới thiệu món ăn"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Chi Tiết Món Ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:padding="15dp"
            android:gravity="top"
            android:id="@+id/edit_description"
            android:drawablePadding="5dp"
            android:hint="Chi tiết món ăn"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Thời gian nấu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:id="@+id/edit_time"
                android:drawablePadding="5dp"
                android:layout_weight="0.8"
                android:hint="0"
                android:paddingLeft="15dp"
                android:background="@drawable/shape_03"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <View

                android:layout_width="5dp"
                android:layout_height="0dp"/>
            <Spinner
                android:layout_weight="0.2"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Số Kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edit_kcal"
            android:drawablePadding="5dp"
            android:hint="0"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Số Người Ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edit_number"
            android:drawablePadding="5dp"
            android:hint="0"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:dividerColor="@color/main_color_01"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Nguyên Liệu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip

                android:text="➕ Thêm nguyên liệu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.chip.ChipGroup>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Hướng Dẫn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Bước 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:padding="15dp"
            android:gravity="top"
            android:id="@+id/edit_b1"
            android:drawablePadding="5dp"
            android:hint="Chi tiết"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip

                android:text="➕ Thêm Bước"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.chip.ChipGroup>





    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>