<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/step"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Bước 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView

            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Tên bước (name)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:inputType="text"
            android:id="@+id/edit_step_name"
            android:hint="Nhập ký tự (tên bước)"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main_color_01"
            android:text="Mô tả bước (description)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <EditText
            android:padding="15dp"
            android:gravity="top"
            android:id="@+id/step_description"
            android:drawablePadding="5dp"
            android:hint="Nhập ký tự"
            android:background="@drawable/shape_03"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:text="Hủy bỏ"
                android:textColor="@color/main_color_07"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yes"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:text="Xác nhận"
                android:textColor="@color/main_color_07"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>