<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripper_effect"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    android:id="@+id/layout_recipe"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_marginTop="32dp"
            android:src="@drawable/shape_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_recommend_food_01"
            android:layout_gravity="center|top"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_recipe"
                app:riv_corner_radius="100dp"
                android:layout_gravity="center|top"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food_01"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:id="@+id/name_recipe"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="Keto Salad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/meal_recipe"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:text="Món: Khai vị"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_17"
                        android:orientation="horizontal"
                        android:layout_width="45dp"
                        android:layout_height="18dp">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:src="@drawable/ic_view_01"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/view_recipe"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="9dp"
                            android:text="999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

