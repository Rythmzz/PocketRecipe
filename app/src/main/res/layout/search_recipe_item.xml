<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/ripper_effect"
    android:id="@+id/layout_recipe"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/shape_14"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_recipe"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_food_02"
            app:riv_corner_radius="15dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_recipe"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Thịt bò xào dưa"
                android:maxLines="1"
                android:layout_width="220dp"
                android:layout_height="35dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/kcal_recipe"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_fire_01"
                    android:text="350 kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/time_recipe"
                    android:gravity="center"

                    android:paddingEnd="15dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_clock_01"
                    android:text="45 min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/count_recipe"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_people_01"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>



    </LinearLayout>

</FrameLayout>