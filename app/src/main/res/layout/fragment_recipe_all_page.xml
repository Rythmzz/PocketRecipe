<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/layout_header"
        android:background="@drawable/img_03"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/ripper_effect"
                android:id="@+id/back"
                android:src="@drawable/ic_back"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/main_color_01"
                android:text="Tùy Chọn Công Thức"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_quote"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Mọi hạnh phúc trên đời đều xuất phát từ một bữa sáng nhàn nhã."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>
        <FrameLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripper_effect"
            android:id="@+id/layout_main_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="15dp"
                android:gravity="bottom"
                android:background="@drawable/img_04"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Món Ăn Chính"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/count_recipe_main"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="30 ý tưởng công thức"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <FrameLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripper_effect"
            android:id="@+id/layout_sub_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="15dp"
                android:gravity="bottom"
                android:background="@drawable/img_06"
                android:orientation="vertical"
                android:layout_width="380dp"
                android:layout_height="300dp">
                <TextView
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:text="Món Ăn Phụ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/count_recipe_sub"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="30 ý tưởng công thức"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </FrameLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <FrameLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripper_effect"
            android:id="@+id/layout_other_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="15dp"
                android:gravity="bottom"
                android:background="@drawable/img_07"
                android:orientation="vertical"
                android:layout_width="380dp"
                android:layout_height="200dp">
                <TextView
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Các Món Ăn Khác"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="15dp"
                    android:id="@+id/count_recipe_other"
                    android:textColor="@color/white"
                    android:text="130 ý tưởng công thức"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </FrameLayout>




    </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>