<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.ybq.android.spinkit.SpinKitView

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_search"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ChasingDots"
            android:padding="5dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/main_color_03"
            />

    <LinearLayout
        android:id="@+id/layout_header"
        android:gravity="center"
        android:background="@color/main_color_07"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <EditText

            android:paddingBottom="5dp"
            android:textSize="18dp"
            android:gravity="center|start"
            android:id="@+id/edit_search"
            android:drawablePadding="5dp"
            android:hint="Tìm kiếm công thức"
            android:drawableLeft="@drawable/ic_search"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_search"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/main_color_03"
            android:textSize="23dp"
            android:padding="15dp"
            android:text="Most Liked Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/most_recipe_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_border_width="2dp"
                app:riv_border_color="@color/black"
                app:riv_corner_radius="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food_01"
                android:layout_width="240dp"
                android:layout_height="150dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:text="Pasta Salad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:textSize="20dp"
                    android:drawableEnd="@drawable/ic_view_01"
                    android:textColor="@color/black"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/main_color_03"
            android:textSize="23dp"
            android:padding="15dp"
            android:text="New Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            android:id="@+id/list_new_recipe"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/shape_08"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_10"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_corner_radius="22dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_food_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:text="Pasta Salad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:drawablePadding="5dp"
                            android:textSize="20dp"
                            android:drawableEnd="@drawable/ic_view_01"
                            android:textColor="@color/black"
                            android:text="100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="🕒 25 Phút"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            />
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="150 kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            />
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="📝 11-12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/shape_08"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_10"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_corner_radius="22dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_food_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:text="Pasta Salad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:drawablePadding="5dp"
                            android:textSize="20dp"
                            android:drawableEnd="@drawable/ic_view_01"
                            android:textColor="@color/black"
                            android:text="100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="🕒 25 Phút"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            />
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="150 kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            />
                        <com.google.android.material.chip.Chip
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/main_color_03"
                            android:text="📝 11-12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <TextView
            android:text="Search Result For Keyword"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            android:textColor="@color/main_color_03"
            android:textStyle="bold"
            android:padding="8dp"
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />



    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/tv_search"
        android:id="@+id/list_benefit_layout"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>






    <LinearLayout
        android:id="@+id/result_not_found"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/ic_recipe_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="28dp"
            android:text="Không tìm thấy kết quả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>