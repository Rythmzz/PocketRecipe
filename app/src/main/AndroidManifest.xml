        <activity android:name=".view.activity.ActivityRestaurantOwnerPage" android:exported="true">
            <nav-graph android:value="@navigation/mobile_restaurant_owner_navigation"/>

        </activity>
        <activity android:name=".view.activity.ActivityAboutPage" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".ActivityMainPage" android:exported="true">
            <nav-graph android:value="@navigation/mobile_navigation"/>


        </activity>

        <activity android:name=".view.activity.ActivityInputPage" android:exported="true">
            <nav-graph android:value="@navigation/mobile_input_navigation"/>


        </activity>

